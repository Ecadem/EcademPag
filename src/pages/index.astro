---
// Main
import Layout from "../layouts/Layout.astro";


// Components
import Descripcion from "../components/main/Descripcion.astro";
import Tools from "../components/main/Tools.astro";
import Post from "../components/main/Post.astro";
import Projects from "../components/main/Projects.astro";
---

<Layout title="Inicio">
	<Descripcion
		Saludo="Hola! Soy Eduardo"
		Desc="Desarrollador full stack, automatización, análisis y machine learning"
	/>
	<Tools
		Titulo = "Herramientas"
		Content = "Experiencia en proyectos de soluciones end to end en analítica avanzada, automatización y reportaje, destacando habilidades blandas como trabajo en equipo, proactividad y eficiencia. He trabajado en colaboración con equipos multidisciplinarios, asegurando la comunicación efectiva y la resolución de problemas de manera oportuna y eficiente. Además, he demostrado una actitud proactiva en la identificación y solución de problemas, siempre en busca de mejorar el proceso y los resultados."	
	/>
	<Post
		Titulo = "Publicaciones más recientes"
		More = "Ver más"
		LinkMore = "/blog"
	/>
	<Projects
		Titulo = "Proyectos más recientes"
		More = "Ver más"
		LinkMore = "/projectos"
	/>
</Layout>


